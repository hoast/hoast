{
    "env": {
        "es6": true,
        "node": true
    },
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 2017,
			"sourceType": "module"
		},
		"root": true,
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}